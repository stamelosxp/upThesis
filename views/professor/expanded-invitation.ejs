<div class="invitation-item-expanded">

    <div class=" data-section">
        <h4 class="data-label">Τίτλος</h4>
        <p class="data-value"><%= invItem.title %></p>
    </div>
    <div class="data-section">
        <!-- will change with dynamic data -->
        <h4 class="data-label">Φοιτητής</h4>
        <p class="data-value">ΣΤΑΜΕΛΟΣ ΧΑΡΙΛΑΟΣ ΠΑΝΑΓΙΩΤΗΣ, 1090076</p>
    </div>
    <div class="data-section">
        <!-- will change with dynamic data -->
        <h4 class="data-label">Επιβλέπων</h4>
        <p class="data-value">ΑΛΕΞΙΟΥ ΔΗΜΗΤΡΙΟΣ</p>

    </div>
    <div class="data-section text-area">
        <h4 class="data-label">Περιγραφή</h4>
        <p class="data-value">
            <%= invItem.description %>
        </p>
    </div>
    <div class="data-section text-area">
        <h4 class="data-label">Συννημένο</h4>
        <p class="data-value">
            <a href="/data/dummy_pdf.pdf" target="_blank" class="attachment-link">
                <span class="attachment-icon">📄</span>
                dummy_pdf.pdf
                <span class="attachment-type">PDF</span>
            </a>
        </p>
    </div>
    <% if(invItem.status === 'pending') { %>
        <div class="pending-buttons">
            <button class="cancel-button" data-id="<%= invItem._id %>">Απόρριψη</button>
            <button class="accept-button" data-id="<%= invItem._id %>">Αποδοχή</button>
        </div>
    <% } %>
    <small class="collapse-button">Κλικ για σύμπτηξη</small>
</div>