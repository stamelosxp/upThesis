<!-- the following form code is for expanded topic -->
<div class="topic-item-expanded">
    <div class=" data-section">
        <h4 class="data-label">Τίτλος</h4>
        <p class="data-value"><%= topic.title %></p>
    </div>
    <div class="data-section">
        <h4 class="data-label">Επιβλέπων</h4>
        <p class="data-value">ΑΛΕΞΙΟΥ ΔΗΜΗΤΡΙΟΣ</p>

    </div>
    <div class="data-section text-area">
        <h4 class="data-label">Περιγραφή</h4>
        <p class="data-value">
            <%= topic.description %>
        </p>
    </div>
    <div class="data-section text-area">
        <h4 class="data-label">Συννημένο</h4>
        <p class="data-value">
            <a href="/data/dummy_pdf.pdf" target="_blank" class="attachment-link">
                <span class="attachment-icon">📄</span>
                dummy_pdf.pdf
                <span class="attachment-type">PDF</span>
            </a>
        </p>
    </div>
    <small class="collapse-button">Κλικ για σύμπτηξη</small>
</div>
